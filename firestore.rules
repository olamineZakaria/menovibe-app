rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection users - permet l'inscription et la gestion
    match /users/{userId} {
      // L'utilisateur peut lire et écrire ses propres données
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permettre la création de documents (pour l'inscription)
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les index de symptômes
    match /user_symptoms/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les index de préoccupations
    match /user_concerns/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les cycles menstruels
    match /cycles/{cycleId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Règles pour les symptômes quotidiens
    match /daily_symptoms/{symptomId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Règles pour les conversations IA
    match /ai_conversations/{conversationId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Règles pour les journaux personnels
    match /journals/{journalId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Règles pour les ressources (lecture publique)
    match /resources/{resourceId} {
      allow read: if true;
    }
    
    // Règles pour les posts communautaires
    match /community_posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        resource.data.authorId == request.auth.uid;
    }
    
    // Règles pour les événements communautaires
    match /events/{eventId} {
      // Lecture publique pour tous les utilisateurs
      allow read: if true;
      // Écriture réservée aux administrateurs (optionnel)
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Règles par défaut - refuser tout accès non autorisé
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 